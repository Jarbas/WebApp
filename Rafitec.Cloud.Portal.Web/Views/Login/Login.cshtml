@model Rafitec.Cloud.Portal.Dominio.Entidades.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel-body">
    
                @using (Html.BeginForm("LoginCodigo", "Login", FormMethod.Post, new { id = "form-login" }))
                {
                    @Html.ValidationSummary();
                <fieldset>
                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"> </i>
                                    </span>
                                    @Html.TextBoxFor(model => model.idUsuario, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <center>
                                <p style="color: red; margin: auto">@ViewBag.ErroLogin</p>
                            </center>

                            <div class="row">
                                <button class="btn btn-primary" type="submit">Acessar</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
                }
            </div>
        </div>
    </div>
</div>



